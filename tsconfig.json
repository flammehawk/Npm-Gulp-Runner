{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "outDir": "./dist",
        "sourceRoot": "./TS"
    },

    "typeAcquisition": {
        "enable": true
    }
}
